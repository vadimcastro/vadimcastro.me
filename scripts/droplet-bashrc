# ~/.bashrc: VadimCastro.me Droplet Configuration
# Optimized bash configuration for DigitalOcean droplet production environment

# If not running interactively, don't do anything
[ -z "$PS1" ] && return

# History configuration - Enhanced for development workflow
HISTCONTROL=ignoredups:ignorespace
HISTSIZE=5000
HISTFILESIZE=10000
shopt -s histappend
shopt -s checkwinsize

# Enable color support
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

# Colored prompt with proper escape sequences
if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    # Green user@host, blue path, white $
    PS1='\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[00m\]\$ '
else
    # Fallback without colors
    PS1='\u@\h:\w\$ '
fi

# Set terminal title
case "$TERM" in
xterm*|rxvt*|screen*)
    PS1="\[\e]0;\u@\h: \w\a\]$PS1"
    ;;
esac

# Environment variables
export DEPLOY_BRANCH_ENV=feature/mobile-friendly

# Project navigation shortcuts
function vc() {
    cd /root/vadimcastro.me
}

# Git shortcuts
alias gs='git status'
alias ga='git add .'
alias gc='git commit -m'
alias gp='git push'
alias gl='git pull'
alias gb='git branch'
alias gco='git checkout'
alias glog='git log --oneline -1'

# System shortcuts
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias ..='cd ..'
alias home='cd ~'
alias c='clear'

# Shell config shortcuts
alias sb='source ~/.bashrc'
alias vb='vim ~/.bashrc'

# Generate and source bashrc from template
gsb() {
    cp scripts/droplet-bashrc ~/.bashrc && sb
}

# Docker shortcuts
alias dps='docker ps'
alias dclean='docker system prune -f'
alias dlog='docker logs -f'
alias dex='docker exec -it'

# Development shortcuts
alias dev='make dev'
alias prod='make prod'
alias deploy='make deploy'
alias status='make droplet-status'
alias logs='make droplet-logs'

# Quick commit and push
function gcp() {
    git add . && git commit -m "$1" && git push
}

# Show all available aliases and functions
function shortcuts() {
    echo "ğŸ“‹ Available Shortcuts & Aliases:"
    echo ""
    echo "ğŸ—‚ï¸  Project Navigation:"
    echo "  vc â†’ cd /root/vadimcastro.me"
    echo ""
    echo "ğŸ”§ Git Shortcuts:"
    echo "  gs â†’ git status"
    echo "  ga â†’ git add ."
    echo "  gc â†’ git commit -m"
    echo "  gp â†’ git push"
    echo "  gl â†’ git pull"
    echo "  gb â†’ git branch"
    echo "  gco â†’ git checkout"
    echo "  glog â†’ git log --oneline -1"
    echo "  gcp \"msg\" â†’ git add . && commit && push"
    echo ""
    echo "ğŸ³ Docker Shortcuts:"
    echo "  dps â†’ docker ps"
    echo "  dclean â†’ docker system prune -f"
    echo "  dlog â†’ docker logs -f"
    echo "  dex â†’ docker exec -it"
    echo ""
    echo "âš¡ Development:"
    echo "  dev â†’ make dev"
    echo "  prod â†’ make prod"
    echo "  deploy â†’ make deploy"
    echo "  status â†’ make droplet-status"
    echo "  logs â†’ make droplet-logs"
    echo ""
    echo "ğŸ’¡ System:"
    echo "  ll â†’ ls -alF"
    echo "  la â†’ ls -A"
    echo "  l â†’ ls -CF"
    echo "  .. â†’ cd .."
